<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/user" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mr.XYZ has lost a person"
            android:textSize="16dp"
            android:id="@+id/person"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textSize="15dp"
            android:ems="10"
            android:id="@+id/cname"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:inputType="numberSigned"
            android:hint="Age"
            android:textSize="15dp"
            android:ems="10"
            android:id="@+id/cage"
            android:layout_below="@+id/cname"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/resultgender"
            android:textSize="15dp"
            android:text="Gender"
            android:layout_below="@+id/cage"
            android:layout_alignEnd="@+id/textView6"
            android:layout_marginLeft="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:inputType="numberSigned"
            android:hint="Height"
            android:textSize="15dp"
            android:ems="10"
            android:id="@+id/cheight"
            android:layout_below="@+id/resultgender"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:inputType="phone"
            android:hint="Mobile Number"
            android:textSize="15dp"
            android:ems="10"
            android:id="@+id/cphone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/cskin"
            android:text="Skin color"
            android:textSize="15dp"
            android:layout_below="@+id/cphone"
            android:layout_alignStart="@+id/resultgender"
            android:layout_marginLeft="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/clocation"
            android:text="Missing Location"
            android:textSize="15dp"
            android:layout_below="@+id/cphone"
            android:layout_alignStart="@+id/resultgender"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
