<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MissingPersonForm">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/theme">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/nidback"
                    android:src="@drawable/back" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MISSING NID"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_gravity="center"
                    android:id="@+id/title"
                    android:textColor="#ffff"
                    android:textSize="21dp" />
            </android.support.v7.widget.Toolbar>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Provide as much informations as you can and submit the form. We will notify you if any found reports matches."
                android:id="@+id/textView6"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:hint="Name in nid"
                    android:ems="10"
                    android:id="@+id/nidname"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:inputType="numberSigned"
                    android:hint="Age in nid"
                    android:ems="10"
                    android:id="@+id/nidage"
                    android:layout_below="@+id/cname"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Gender"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/cage"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="2dp"/>

                <Spinner
                    android:layout_width="222dp"
                    android:layout_height="40dp"
                    android:id="@+id/nidspinner"
                    android:layout_below="@+id/cage"
                    android:layout_alignEnd="@+id/textView6"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:inputType="phone"
                    android:hint="NID Number"
                    android:ems="10"
                    android:id="@+id/nidnumber"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Missing Location"
                    android:id="@+id/textView9"
                    android:layout_below="@+id/cphone"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="2dp"/>

                <Spinner
                    android:layout_width="149dp"
                    android:layout_height="40dp"
                    android:id="@+id/nidlocation"
                    android:layout_below="@+id/cphone"
                    android:layout_alignStart="@+id/resultgender"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:background="@color/theme"
                    android:text="submit"
                    android:textColor="@color/grayLight"
                    android:id="@+id/nidsubmit"
                    android:layout_below="@+id/clocation"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="55dp"
            android:layout_marginTop="110dp"
            android:layout_gravity="bottom"
            android:background="@color/theme">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/home"
                    android:id="@+id/nid"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="66dp"/>
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/access_point"
                    android:id="@+id/nid1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="25dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="43dp"
                    android:src="@drawable/bell_ring"
                    android:id="@+id/nid2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="25dp"/>
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/telegram"
                    android:id="@+id/nid3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="25dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>






</ScrollView>
