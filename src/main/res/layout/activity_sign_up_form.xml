<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zc.missingreports2.SignUpForm">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/theme">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MISSING REPORTS"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_gravity="center"
                    android:textColor="#ffff"
                    android:textSize="21dp" />
            </android.support.v7.widget.Toolbar>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:background="@drawable/input_outline2"
            android:hint=" Name"
            android:layout_gravity="center"
            android:ems="10"
            android:id="@+id/sname"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="@drawable/input_outline2"
            android:hint=" City"
            android:layout_gravity="center"
            android:id="@+id/scity"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_outline2"
            android:hint="Username (alphanumeric)"
            android:layout_gravity="center"
            android:ems="10"
            android:id="@+id/semail"
            android:layout_below="@+id/scity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:background="@drawable/input_outline2"
            android:hint=" Password"
            android:layout_gravity="center"
            android:ems="10"
            android:id="@+id/spassword"
            android:layout_below="@+id/cname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/linear2"
            android:layout_below="@+id/semail"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user"
                android:id="@+id/user"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="0dp"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="189dp"
                android:layout_height="48dp"
                android:text="Upload Photo"
                android:background="@color/startBlue"
                android:textColor="#ffff"
                android:id="@+id/upload"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="sign up"
            android:background="@color/theme"
            android:id="@+id/Submit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />


    </LinearLayout>

    </LinearLayout>


</ScrollView>
