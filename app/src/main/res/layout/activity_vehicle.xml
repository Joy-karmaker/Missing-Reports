<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zc.missingreports2.VehicleActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/theme">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/vehicleback"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MISSING Vehicle"
            android:id="@+id/vtitle"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            android:textColor="#ffff"
            android:textSize="21dp" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Your Vehicle"
        android:gravity="center"
        android:textSize="18dp"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="-180dp"
        android:layout_marginTop="-240dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle"
            android:id="@+id/vehicle"
            android:layout_gravity="center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIKE"
            android:textSize="18dp"
            android:layout_marginLeft="-70dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="520dp"
        android:background="@color/theme"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:gravity="center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/home"
                android:id="@+id/vehiclehomebutton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/access_point"
                android:id="@+id/vehiclenewsfeed"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="25dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:src="@drawable/bell_ring"
                android:id="@+id/vehiclenotification"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="25dp"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/telegram"
                android:id="@+id/vehiclechat"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
